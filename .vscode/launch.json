{
  // Use IntelliSense to learn about possible Node.js debug attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "mocha:bildit-here",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/packages/cli/bildit-here/node_modules/mocha/bin/_mocha",
      "args": [
        "test/**/*.test.js"
      ],
      "cwd": "${workspaceRoot}/packages/cli/bildit-here",
      "protocol": "inspector",
      "console": "integratedTerminal"

    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Remote",
      "address": "localhost",
      "port": 9229,
      "localRoot": "${workspaceRoot}",
      "remoteRoot":
        "Absolute path to the remote directory containing the program",
      "protocol": "inspector"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Test CLI on test-repo",
      "program": "${workspaceRoot}/packages/cli/bildit-here/src/bildit-here.js",
      "args": ["git@github.com:giltayar/bildit-test-repo.git", "."],
      "cwd": "${workspaceRoot}/../test-repo",
      "showAsyncStacks": true,
      "console": "integratedTerminal",
      "env": {
        "DEBUG":
          "bildit:bildit:remote-docker-agent,bildit:config-based-plugin-repository"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Test CLI on e2e test-repo",
      "program": "${workspaceRoot}/packages/cli/bildit-here/src/bildit-here.js",
      "args": ["/var/folders/mc/yh0mjyzn1mx5kn5c4j26b2fc0000gn/T/53168510622OGW1yB"],
      "showAsyncStacks": true,
      "console": "integratedTerminal",
      "env": {
        "DEBUG":
          "bildit:bildit:remote-docker-agent,bildit:config-based-plugin-repository"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${file}"
    }
  ]
}
