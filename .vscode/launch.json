{
  // Use IntelliSense to learn about possible Node.js debug attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [

    {
      "name": "mocha:plugin-import",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/packages/plugins/plugin-import/node_modules/mocha/bin/_mocha",
      "args": [
        "--no-timeouts",
        "test/**/*.test.js"
      ],
      "cwd": "${workspaceRoot}/packages/plugins/plugin-import",
      "protocol": "inspector",
      "env": {
        "DEBUG": "*"
      },
      "console": "integratedTerminal"

    },
    {
      "name": "mocha:bildit-here",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/packages/cli/bildit-here/node_modules/mocha/bin/_mocha",
      "args": [
        "--no-timeouts",
        "test/**/*.test.js"
      ],
      "cwd": "${workspaceRoot}/packages/cli/bildit-here",
      "protocol": "inspector",
      "env": {
        "DEBUG": "bildit:artifact-finder,bildit:host-agent,bildit:repo-build-job"
      },
      "console": "integratedTerminal"

    },
    {
      "name": "mocha:agent-commons",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/packages/agents/agent-commons/node_modules/mocha/bin/_mocha",
      "args": [
        "--no-timeouts",
        "test/**/*.test.js"
      ],
      "cwd": "${workspaceRoot}/packages/agents/agent-commons",
      "protocol": "inspector",
      "env": {
        "DEBUG": ""
      },
      "console": "integratedTerminal"

    },
    {
      "name": "mocha:artifact-dependency-graph",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/packages/artifacts/artifact-dependency-graph/node_modules/mocha/bin/_mocha",
      "args": [
        "--no-timeouts",
        "test/**/*.test.js"
      ],
      "cwd": "${workspaceRoot}/packages/artifacts/artifact-dependency-graph",
      "protocol": "inspector",
      "env": {
        "DEBUG": ""
      },
      "console": "integratedTerminal"

    },
    {
      "name": "mocha:repo-build-job",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/packages/repository/repo-build-job/node_modules/mocha/bin/_mocha",
      "args": [
        "--no-timeouts",
        "test/**/*.test.js"
      ],
      "cwd": "${workspaceRoot}/packages/repository/repo-build-job",
      "protocol": "inspector",
      "env": {
        "DEBUG": ""
      },
      "console": "integratedTerminal"

    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${file}"
    }
  ]
}
